<paquet
	prefix="geol_install"
	categorie="outil"
	version="1.4.1"
	etat="stable"
	compatibilite="[3.2.0;4.*]"
	logo="images/geol_install.png"
>	

	<nom>Géodiversité - Install</nom>
	<!-- Utilitaire pour installer Géodiversité, ses dépendances et quelques plugins optionnels -->

	<auteur>b_b</auteur>

	<licence lien="http://www.gnu.org/licenses/gpl-3.0.html">GPL 3</licence>

	<!-- la base -->
	<necessite nom="geol" compatibilite="[3.0.0;[" />
	<!-- les utilise de geol -->
	<necessite nom="gravatar" compatibilite="[1.3.0;[" />
	<necessite nom="spipicious" compatibilite="[2.0.0;[" />
	<necessite nom="licence" compatibilite="[0.9.1;[" />
	<necessite nom="fulltext" compatibilite="[0.7.0;[" />
	<!-- plugins utiles mais pas nécessités par geol -->
	<necessite nom="crayons" compatibilite="[1.26.11;[" />
	<necessite nom="photoswipe" compatibilite="[0.6.1;[" />
	<!-- modules complémentaires pour les albums & balades -->
	<necessite nom="geol_balades" compatibilite="[2.1.0;[" />
	<!-- optionnels mais peuvent servir -->
	<necessite nom="opensearch" compatibilite="[0.2.4;[" />
	<necessite nom="socialtags" compatibilite="[3.0.0;[" />

</paquet>
